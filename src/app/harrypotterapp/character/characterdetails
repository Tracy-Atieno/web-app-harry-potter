import React from 'react';
import { useRouter } from 'next/router';
import { useRecoilValue } from 'recoil';
import { charactersState } from '../recoil/atoms';

const CharacterDetailPage: React.FC = () => {
  const router = useRouter();
  const { characterId } = router.query;

  const characters = useRecoilValue(charactersState);
  const character = characters.find((char) => char.name === characterId);


  

  if (characters.length === 0) {
    // Handle the case when characters data is still loading or empty
    return <div>Loading characters...</div>;
  }

  if (!character) {
    return <div>Character not found.</div>;
  }

  return (
    <div className="p-4">
      <h1 className="text-2xl font-bold mb-4">{character.name}</h1>

      {/* Display other character details */}
      {character.dateOfBirth && <p>Date of Birth: {character.dateOfBirth}</p>}
      {character.role && <p>Role: {character.role}</p>}
      {character.house && <p>House: {character.house}</p>}
      {character.wand && <p>Wand: {character.wand}</p>}
    </div>
  );
};

export default CharacterDetailPage;
